<div class="container">
  <%= simple_form_for @device do |f| %>
    <%= f.input :name, label: 'Nom du matériel' %>
    <%= f.input :description, label: 'Nom du matériel' %>
    <%= f.association :category, { collection: @categories } %>
    <%= f.association :users, collection: @users %>
    <%= f.submit 'Enregistrer' %>
  <% end %>
</div>
