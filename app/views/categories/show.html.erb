<div class="">
  <div class="xs-padded-bottom">
    <h1><%= @category.label.pluralize.capitalize %></h1>
  </div>
  <table class="table table-striped table-bordered">
    <tr>
      <th>#</th>
      <th>Name</th>
    </tr>
    <% @devices.each_with_index do |device, i| %>
      <tr>
        <td><%= i + 1 %></td>
        <td><%= link_to device.name, device %></td>
      </tr>
    <% end %>
  </table>
</div>
